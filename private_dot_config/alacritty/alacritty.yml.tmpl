# Configuration for Alacritty, the GPU enhanced terminal emulator.
# env:
#   TERM: xterm-256color

window:
  padding:
    x: 5
    y: 5
  class:
    instance: Alacritty
    general: Alacritty
  opacity: 1

scrolling:
  history: 10000
  multiplier: 3

font:
{{- $alacritty_font := "" -}}
{{/*work around different names for jetbrains font between linux distros*/}}
{{- if eq .osid "linux-elementary" -}}
{{-   $alacritty_font = "JetBrains Mono" -}}
{{- else if eq .osid "linux-void" -}}
{{-   $alacritty_font = "JetBrains Mono Nerd Font" -}}
{{- end }}
  normal:
    family: {{ $alacritty_font }}
    style:  Medium
  bold:
    family: {{ $alacritty_font }}
    style:  Bold
  italic:
    family: {{ $alacritty_font }}
    style:  MediumItalic
  bold_italic:
    family: {{ $alacritty_font }}
    style: BoldItalic
  size: 7
draw_bold_text_with_bright_colors: true

colors:
  primary:
    background: "#11121D"
    foreground: "#a9b1d6"
  normal:
    black: "#32344a"
    red: "#f7768e"
    green: "#9ece6a"
    yellow: "#e0af68"
    blue: "#7aa2f7"
    magenta: "#ad8ee6"
    cyan: "#449dab"
    white: "#787c99"
  bright:
    black: "#444b6a"
    red: "#ff7a93"
    green: "#b9f27c"
    yellow: "#ff9e64"
    blue: "#7da6ff"
    magenta: "#bb9af7"
    cyan: "#0db9d7"
    white: "#acb0d0"

selection:
  save_to_clipboard: true

shell:
  program: /usr/bin/zsh


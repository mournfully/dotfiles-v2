{
    "explorer.confirmDelete": false,
    "keyboard.dispatch": "keyCode",
    "editor.lineNumbers": "relative",
    "window.titleBarStyle": "custom",
    "editor.fontFamily": "'JetBrainsMono Nerd Font', 'monospace', monospace, Material Design Icons Desktop",
    "editor.fontLigatures": true,
    "explorer.confirmDragAndDrop": false,
    "git.useEditorAsCommitInput": false,
    "latex-workshop.linting.chktex.exec.path": "/opt/texlive/2022/bin/x86_64-linux/chktex",
    // This allows magic comments
    "latex-workshop.latex.build.forceRecipeUsage": false,
    // Enable linting LaTeX with ChkTeX.
    "latex-workshop.linting.chktex.enabled": true,
    "latex-workshop.latexindent.path": "/opt/texlive/2022/bin/x86_64-linux/latexindent",
    "workbench.editor.closeEmptyGroups": false,
    "debug.toolBarLocation": "docked",
    "terminal.integrated.defaultLocation": "editor",
    "go.terminal.activateEnvironment": false,
    "editor.wordWrap": "on",
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "diffEditor.wordWrap": "inherit",
        "editor.wordWrapColumn": 100
    },
    "diffEditor.wordWrap": "on",
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "workbench.sideBar.location": "right",
    "workbench.iconTheme": "moxer-icons",
    "redhat.telemetry.enabled": false,
    "workbench.colorTheme": "Tokyo Night",
    "window.zoomLevel": -1,
    "go.gopath": "~/.local/share/go",
    "go.toolsManagement.autoUpdate": true,
    "code-runner.defaultLanguage": "go",
    "code-runner.enableAppInsights": false,
    "zenMode.fullScreen": false,
    "zenMode.centerLayout": false,
    "code-runner.cwd": "/run/user/$(id -u)/",
}
